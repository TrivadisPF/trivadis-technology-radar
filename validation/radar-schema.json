{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "id": "angular",
            "title": "Angular",
            "info": "a modern web framework",
            "ring": "adopt",
            "quadrant": "languages-and-frameworks",
            "skills": "angular",
            "relatedTo": [],
            "alternativeTo": [],
            "skillsNeeded": [],
            "supportsTvdBB": [],
            "owners": ["?"],
            "knowHowPageURI": "",
            "status": "draft",
            "featured": true,
            "__content": "\n\n[Angular](https://angular.io/) s a TypeScript-based open-source web application framework led by the Angular Team at Google and by a community of individuals and corporations. Angular is a complete rewrite from the same team that built AngularJS. \n\n"
        }
    ],
    "required": [
        "id",
        "title",
        "ring",
        "quadrant",
        "owners",
        "status" 
    ],
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "string",
            "title": "The id schema",
            "description": "The id of the technology in lowercase.",
            "default": "",
            "examples": [
                "angualar"
            ]
        },
        "title": {
            "$id": "#/properties/title",
            "type": "string",
            "title": "The title schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Angular"
            ]
        },
        "info": {
            "$id": "#/properties/info",
            "type": "string",
            "title": "The info schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "a modern web framework"
            ]
        },
        "ring": {
            "$id": "#/properties/ring",
            "type": "string",
            "title": "The ring schema",
            "enum": ["trial", "assess", "adopt", "hold", "watch"],
            "description": "An explanation about the purpose of this instance.",
            "default": "watch",
            "examples": [
                "adopt"
            ]
        },
        "quadrant": {
            "$id": "#/properties/quadrant",
            "type": "string",
            "title": "The quadrant schema",
            "enum": ["languages-and-frameworks", "data-management", "platforms-and-services", "architecture-methods-and-patterns"],
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "languages-and-frameworks"
            ]
        },
        "relatedTo": {
            "$id": "#/properties/relatedTo",
            "type": "array",
            "title": "The relatedTo schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                []
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/relatedTo/items"
            }
        },        

        "alternativeTo": {
            "$id": "#/properties/alternativeTo",
            "type": "array",
            "title": "The alternativeTo schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                []
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/alternativeTo/items"
            }
        },
        "skillsNeeded": {
            "$id": "#/properties/skillsNeeded",
            "type": "array",
            "title": "The skillsNeeded schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                ["angular"]
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/skillsNeeded/items"
            }
        },
        "supportsTvdBB": {
            "$id": "#/properties/supportsTvdBB",
            "type": "array",
            "title": "The supportsTvdBB schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                []
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/supportsTvdBB/items"
            }
        },
        "owners": {
            "$id": "#/properties/owners",
            "type": "array",
            "title": "The owners schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                []
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/owners/items"
            }
        },
        "knowHowPageURI": {
            "$id": "#/properties/knowHowPageURI",
            "type": "string",
            "title": "The link to the Trivadis Know How Page",
            "description": "A link to a page with additional know how on the technology.",
            "default": "",
            "examples": [
                "http://www.trivadis.com"
            ]
        },
        "status": {
            "$id": "#/properties/status",
            "type": "string",
            "title": "The status schema",
            "enum": ["draft","proposed","rejected","accepted","deprecated"],
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "draft"
            ]
        },
        "featured": {
            "$id": "#/properties/featured",
            "type": "boolean",
            "title": "The featured schema",
            "description": "An explanation about the purpose of this instance.",
            "default": false,
            "examples": [
                true
            ]
        },
        "__content": {
            "$id": "#/properties/__content",
            "type": "string",
            "title": "The __content schema",
            "description": "An explanation about the purpose of this instance.",
            "default": false
        }        
    },
    "additionalProperties": false
}